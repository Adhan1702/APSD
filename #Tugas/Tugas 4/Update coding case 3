#include <iostream>
using namespace std;

int main() {
    int total = 0;
    for(int i = 2; i <= 10; i += 2) {
        total += i;
        for(int j = 2; j <= i; j += 2) {
            cout << j;
            if(j != i) {
                cout << " + ";
            }
        }
        cout << " = " << total << endl;
    }
    return 0;
}
